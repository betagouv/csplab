#!/usr/bin/env bash

set -eo pipefail

declare service="${SERVICE:-tycho}"
declare volume="./src/${service}:/app"
declare DOCKER_USER
DOCKER_UID="$(id -u)"
DOCKER_GID="$(id -g)"
DOCKER_USER="${DOCKER_UID}:${DOCKER_GID}"

DOCKER_USER=${DOCKER_USER} \
  DOCKER_UID=${DOCKER_UID} \
  DOCKER_GID=${DOCKER_GID} \
  docker compose run --rm --no-deps \
    -u "uv:uv" \
    -v "${volume}" \
    "${service}" \
      uv "$@"
